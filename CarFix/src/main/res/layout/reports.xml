<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/stback">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/backgr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageButton2"
            android:layout_alignParentRight="false"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_centerVertical="true"
            android:background="@drawable/button_add"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="REPORTS"
            android:id="@+id/textView"
            android:layout_alignParentLeft="false"
            android:layout_centerInParent="true"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="After Entered Date"
        android:id="@+id/buttonDateBeggining"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_add"
        android:textStyle="bold"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Before Entered Date"
        android:id="@+id/buttonDateEnd"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buttonDateBeggining"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_add"
        android:textStyle="bold"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Automobile"
        android:id="@+id/buttonAutomobile"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_above="@+id/buttonBeginRepair"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_add"
        android:textStyle="bold"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Not Finished Repairs"
        android:id="@+id/buttonNotFinished"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buttonDateEnd"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_add"
        android:textStyle="bold"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Date Begin Repair"
        android:id="@+id/buttonBeginRepair"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/buttonDateBeggining"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_add"
        android:textStyle="bold"/>

</RelativeLayout>