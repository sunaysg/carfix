<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stback"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/backgr"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageButton2"
            android:layout_alignParentRight="false"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_centerVertical="true"
            android:background="@drawable/button_add"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add Car"
            android:id="@+id/textView2"
            android:layout_alignParentLeft="false"
            android:textColor="#ffffff"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Registration N:"
        android:id="@+id/textView"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Brand"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView4"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Model"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Year"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Body Number"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Engine Number"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Color"
        android:id="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView7"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cubics"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Owner"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Information"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textRNUMBER"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textCapCharacters" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textBRAND"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textCapCharacters" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textMODEL"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textYEARPR"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:singleLine="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textENUMBER"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textYEARPR"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textCapCharacters" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textBNUMBER"
        android:layout_below="@+id/textENUMBER"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textCapCharacters" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textCOLOR"
        android:layout_below="@+id/textBNUMBER"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext_background"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/editTextSPINER"
        android:layout_below="@+id/textBNUMBER"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:background="@drawable/edittext_background"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textCUBICS"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:singleLine="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textOWNER"
        android:layout_below="@+id/textView9"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textPHONE"
        android:background="@drawable/edittext_background"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:layout_below="@+id/textOWNER"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:inputType="phone" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:id="@+id/textINFO"
        android:background="@drawable/edittext_background"
        android:layout_below="@+id/textPHONE"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:inputType="textCapSentences|textMultiLine"
        android:gravity="left|top"
        android:lines="8"
        android:minLines="6"
        android:maxLines="10"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Save Car"
        android:id="@+id/saveb"
        android:background="@drawable/button_add"
        android:padding="10dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView3"
        android:textStyle="bold" />



</RelativeLayout>